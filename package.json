{
  "name": "vue-autoblog",
  "version": "0.1.1",
  "description": "A compile-time tool to generate Vue template files (*.vue) from markdown files (*.md)",
  "main": "src/ts-out/main.js",
  "repository": "https://github.com/kvnxiao/vue-autoblog",
  "author": "Kevin (Ze Hao) Xiao",
  "license": "Apache-2.0",
  "private": false,
  "directories": {
    "test": "test",
    "example": "testdata"
  },
  "dependencies": {
    "js-beautify": "^1.7.5",
    "js-yaml": "^3.12.0",
    "markdown-it": "^8.4.2",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/js-beautify": "^0.0.31",
    "@types/js-yaml": "^3.11.2",
    "@types/markdown-it": "^0.0.4",
    "@types/node": "^10.5.4",
    "@types/prettier": "^1.13.2",
    "ava": "1.0.0-beta.6",
    "husky": "^1.0.0-rc.13",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6"
  },
  "scripts": {
    "clean": "rimraf build .nyc_output coverage",
    "build": "yarn run clean && tsc",
    "test": "yarn run build && nyc ava build/test/",
    "lint": "tslint src/**/*.ts test/**/*.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**.ts",
      "build/src/**.js"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/main.ts",
      "**/main.js"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test"
    }
  }
}
